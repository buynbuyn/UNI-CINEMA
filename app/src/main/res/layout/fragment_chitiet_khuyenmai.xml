<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/bg_nav"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/btn_back_home"
                android:layout_width="23dp"
                android:layout_height="19.31dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_back"
                android:translationY="-18dp"
                android:contentDescription="Back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tin tức và Ưu đãi"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:translationY="18dp" />
        </RelativeLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:padding="10dp">

            <ImageView
                android:id="@+id/imgPromoDetailBanner"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                android:background="@drawable/bg_input_rounded"
                android:clipToOutline="true"
                android:contentDescription="Banner khuyến mãi" />

            <TextView
                android:id="@+id/tvPromoDetailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tiêu đề khuyến mãi"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingTop="12dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/tvPromoDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nội dung khuyến mãi"
                android:textSize="16sp"
                android:lineSpacingExtra="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="8dp"
                android:textColor="#444444" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>