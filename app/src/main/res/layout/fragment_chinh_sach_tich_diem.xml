<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <!-- Thanh tiêu đề -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_nav"
        android:padding="16dp">

        <ImageButton
            android:id="@+id/btn_back_home"
            android:layout_width="23dp"
            android:layout_height="19.31dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_back"
            android:contentDescription="Back"
            android:translationY="-18dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Chính sách tích điểm"
            android:textColor="@android:color/white"
            android:textSize="25sp"
            android:translationY="18dp" />
    </RelativeLayout>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
        <!-- Nội dung chính sách -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Điều 1: Mục đích"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_policy_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mục đích của các điều khoản (“điều khoản”) là để quy định các quyền và nghĩa vụ của các thành viên và các thủ tục để các thành viên được sử dụng chương trình khách hàng thường xuyên do UNI Cinema cung cấp"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:lineSpacingExtra="6dp"
                    android:paddingBottom="10dp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Điều 2: Định nghĩa"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thành viên có thẻ thành viên do UNI Cinema cung cấp (gọi tắt là Thẻ LPoint) nghĩa là các thành viên chấp thuận điều khoản này, đã đề nghị Công ty cấp thẻ thành viên, và đã được cấp thẻ thành viên, và cũng được gọi chung là thành viên."
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:lineSpacingExtra="6dp"
                    android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Chương trình khách hàng thường xuyên UNI Cinema” nghĩa là các chương trình chăm sóc khách hàng thường xuyên do UNI Cinema cấp cho thành viên, như quy định tại điều 3, và cũng được gọi chung là chương trình."
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Điểm tích lũy nghĩa là điểm được cấp cho thành viên theo tỷ lệ tích lũy do UNI Cinema thông báo khi thành viên mua các sản phẩm hoặc dịch vụ từ UNI Cinema."
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Điểm sử dụng” là điểm khách hàng đã sử dụng khi mua các sản phẩm dịch vụ hoặc đổi lấy quà tặng miễn phí tại UNI Cinema."
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Điểm hiện hữu” nghĩa là điểm tích lũy đã đáp ứng đủ các tiêu chuẩn do công ty đề ra, sau khi trừ đi những điểm mà thành viên đã sử dụng. Những điểm này có sẵn để dùng khi mua sản phẩm, dịch vụ hoặc đổi quà miễn phí từ UNI Cinema."
                        android:textSize="14sp"
                        android:textColor="#444"
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Điều 3: Chương trình"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Chương trình áp dụng ưu đãi” nghĩa là các thành viên có thể sử dụng các chương trình khuyến mãi như giảm giá hoặc miễn phí do UNI Cinema triển khai."
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:lineSpacingExtra="6dp"
                    android:paddingBottom="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Điều 4: Tư cách thành viên"
                android:textStyle="bold"
                android:textSize="16sp"
                android:paddingBottom="10dp"
                android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Không thành viên nào được xin phép chuyển nhượng hay cho mượn tư cách thành viên của họ cho người thứ ba và cũng không được sử dụng để làm vật bảo đảm"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:lineSpacingExtra="6dp"
                    android:paddingBottom="10dp"/>
        </LinearLayout>
</ScrollView>
    </LinearLayout>
